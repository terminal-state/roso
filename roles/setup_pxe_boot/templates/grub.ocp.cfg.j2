set default=0
set timeout=5

menuentry "Install Red Hat CoreOS for {{ item.name }}" {
    linuxefi /rhcos-live-kernel coreos.inst=yes \
        coreos.inst.install_dev=/dev/sda \
        coreos.inst.ignition_url=http://{{ http_server }}/ignitions/master.ign \
        coreos.live.rootfs_url=http://{{ http_server }}/rhcos-live-rootfs.img \
        ip=dhcp
    initrdefi /rhcos-live-initramfs.img
}

